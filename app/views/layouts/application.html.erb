<!DOCTYPE html>
<html>
  <head>
    <title>SuggestionBox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"></link>
  </head>

  <body>
    <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper">
          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
          <a href="#!" class="brand-logo">SuggestionBox</a>
          <ul class="right hide-on-med-and-down">
            <% if current_person %>
              <li><a href="#" id="topics">Topics</a></li>
              <li><a href="#" id="open_suggestion">Open Suggestion</a></li>
            <% else %>
              <li><a href="#signup" id="signup_link">Signup</a></li>
              <li><a href="#login" id="login_link">Login</a></li>
            <% end %>
          </ul>
          <ul class="side-nav" id="mobile-demo">
            <% if current_person %>
              <li><a href="#" id="topics">Topics</a></li>
              <li><a href="#" id="open_suggestion">Open Suggestion</a></li>
            <% else %>
              <li><a href="#signup" id="signup_link">Signup</a></li>
              <li><a href="#login" id="login_link">Login</a></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>

    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>

    <%= yield :footer %>

    <% unless current_person %>
      <div id="signup" class="modal modal-fixed-footer">
        <div class="modal-content">
          <h4>Signup</h4>
          <hr>
          <div class="row">
            <form class="col s12" id="login-form" action="<%= core_box.people_signup_path %>">
              <div class="row">
                <div class="input-field col s12">
                  <input placeholder="First Name" id="first_name" name="first_name" type="text" class="validate" required>
                </div>
                <div class="input-field col s12">
                  <input placeholder="Last Name" id="last_name" name="last_name" class="validate" required>
                </div>
                <div class="input-field col s12">
                  <input placeholder="Email" id="email" type="email" name="email" class="validate" required>
                </div>
                <div class="input-field col s12">
                  <input placeholder="Password" id="password" name="password" type="password" class="validate" required>
                </div>
              </div>
              <button class="btn waves-effect waves-light" type="submit" name="action" id="signup-btn">Signup</button>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
        </div>
      </div>

      <div id="login" class="modal modal-fixed-footer modal-sm">
        <div class="modal-content">
          <h4>Login</h4>
          <hr>
          <div class="row">
            <form class="col s12" id="login-form" action="<%= core_box.people_login_path %>">
              <div class="row">
                <div class="input-field col s12">
                  <input placeholder="Email" id="email" name="email" type="text" class="validate" required>
                </div>
                <div class="input-field col s12">
                  <input placeholder="Password" id="password" type="password" name="password" class="validate" required>
                </div>
              </div>
              <button class="btn waves-effect waves-light" type="submit" name="action" id="login-btn">Login</button>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <a href="#!" data-dismiss="modal" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
        </div>
      </div>
    <% end %>
  </body>
</html>
